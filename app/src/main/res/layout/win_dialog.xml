<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="#017878">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_7ssp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU WON"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/pressstartp2p_regular"
            android:layout_margin="@dimen/_15sdp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_4sdp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pressstartp2p_regular"
                android:text="Elapsed Time: "
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/winTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pressstartp2p_regular"
                android:text="0"
                android:textColor="@color/white"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_6sdp"
            android:weightSum="2">

            <Button
                android:id="@+id/dismissWinDialogButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dismiss"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/pressstartp2p_regular"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:paddingTop="@dimen/_7sdp"
                android:backgroundTint="#CC2323" />


            <Button
                android:id="@+id/resetWinDialogButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Restart"
                android:fontFamily="@font/pressstartp2p_regular"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:paddingTop="@dimen/_7sdp"
                android:backgroundTint="#CC2323" />

        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>