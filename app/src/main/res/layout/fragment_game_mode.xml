<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.GameModeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1ab">

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/backOptionsButton"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_13sdp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_centerInParent="true"
                android:layout_marginVertical="7dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/logo" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">



        <Button
            android:id="@+id/easyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_15sdp"
            android:fontFamily="@font/pressstartp2p_regular"
            android:textSize="@dimen/_25ssp"
            android:textAlignment="center"
            android:paddingTop="@dimen/_15sdp"
            android:paddingHorizontal="@dimen/_13sdp"
            android:text="EASY"
            app:layout_constraintVertical_bias="0.1" />

        <Button
            android:id="@+id/mediumBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEDIUM"
            android:layout_marginVertical="@dimen/_15sdp"
            android:fontFamily="@font/pressstartp2p_regular"
            android:textSize="@dimen/_25ssp"
            android:paddingTop="@dimen/_17sdp"
            android:paddingHorizontal="@dimen/_13sdp" />

        <Button
            android:id="@+id/hardBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HARD"
            android:fontFamily="@font/pressstartp2p_regular"
            android:textSize="@dimen/_25ssp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingHorizontal="@dimen/_13sdp"
            android:layout_marginVertical="@dimen/_15sdp"/>

        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>